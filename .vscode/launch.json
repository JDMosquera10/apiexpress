{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Debug Backend (Development)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/server.ts",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--require",
        "ts-node/register",
        "--require",
        "dotenv/config"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "üîß Debug Backend (Production Build)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/server.js",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "production"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "üêõ Debug Current File",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--require",
        "ts-node/register",
        "--require",
        "dotenv/config"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true
    },
    {
      "name": "üß™ Debug Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--no-cache",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--require",
        "ts-node/register",
        "--require",
        "dotenv/config"
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true
    },
    {
      "name": "üîç Debug Cron Service",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/services/CronService.ts",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--require",
        "ts-node/register",
        "--require",
        "dotenv/config"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true
    },
    {
      "name": "üì° Debug WebSocket",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/utils/WebSocketManager.ts",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--require",
        "ts-node/register",
        "--require",
        "dotenv/config"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true
    },
    {
      "name": "üóÑÔ∏è Debug Database",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/config/database.ts",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--require",
        "ts-node/register",
        "--require",
        "dotenv/config"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true
    },
    {
      "name": "üîó Attach to Process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "üöÄ Full Stack Debug",
      "configurations": [
        "üöÄ Debug Backend (Development)",
        "üîó Attach to Process"
      ],
      "stopAll": true
    }
  ]
}
