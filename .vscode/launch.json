{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug TypeScript",
        "program": "${workspaceFolder}/src/server.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "runtimeArgs": [
          "-r",
          "ts-node/register"
        ],
        "sourceMaps": true,
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }